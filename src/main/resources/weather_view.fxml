<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.quang.WeatherController">

    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="Weather Client App"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <HBox spacing="10">
                <Label text="City:"/>
                <ComboBox fx:id="cityCombo" prefWidth="160"/>
                <Button fx:id="fetchBtn" text="Fetch Weather" onAction="#onFetchWeather"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <Label fx:id="tempLabel"
                   text="-- Â°C"
                   style="-fx-font-size: 32px; -fx-font-weight: bold;"/>

            <Label fx:id="statusLabel"
                   text="---"
                   style="-fx-font-size: 18px;"/>

            <!-- WEATHER GRID -->
            <GridPane hgap="30" vgap="15" alignment="CENTER">

                <Label text="Wind:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="windLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Humidity:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="humidityLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Cloud Cover:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="cloudLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Pressure:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label fx:id="pressureLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="UV Index:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <Label fx:id="uvLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Visibility:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <Label fx:id="visibilityLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>
    </center>

    <bottom>
        <TextArea fx:id="resultArea" prefHeight="180" wrapText="true"/>
    </bottom>

</BorderPane>
